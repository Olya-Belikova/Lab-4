Зарание  1:
using System;

namespace Lab4
{
    class Program
    {
        static void Main(string[] args)
        {
            int s = 0;
            int p = 0;
            Console.Write("a =  ");
            int a = int.Parse(Console.ReadLine());
            Console.Write("b =  ");
            int b = int.Parse(Console.ReadLine());
            s = a * b;
            Console.WriteLine("S = (a * b) = " + s);
            p = 2 * (a + b);
            Console.WriteLine("P = 2 * (a + b) = " + p);
        }
    }
}
